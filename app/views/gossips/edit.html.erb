<h5 class="text-center">Renseigne les différents champs ci-dessous pour partager ton Gossip</h5>
<br>

<% if @invalid %>
  <div class="alert alert-danger" role="alert">
    <p>Nous n avons pas réussi à modifier le gossip pour la (ou les) raison(s) suivante(s) :<p>
    <ul>
    <% @gossip.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
  
<% end %>

<%= form_for @gossip do |f| %>
    <div class="form-group">
        <label>Titre du gossip</label>
        <%= f.text_area :title, class: 'form-control' %>
    </div>

    <div class="form-group">
    <label>Expliques-nous lo que paso :</label>
    <%= f.text_area :content, class: 'form-control' %>
    </div>

    <div class="form-group">
        <button type="submit">Enregister les modifications</button>
    </div>

<% end %>