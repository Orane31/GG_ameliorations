<button type="button" class="btn btn-outline-dark"><%= link_to "Post a new Gossip", new_gossip_path %></button>

<div class="row">
<% @gossips.each_with_index do |gossip| %>
  <div class="col-sm-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title"><%= gossip.title %></h5>
        <p class="card-text"><%= gossip.user.first_name%> <%= gossip.user.last_name%></p>
        <%=link_to "Check out the details", gossip_path(:id => gossip.id), :class => "btn btn-primary" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
